{
  "name": "@evander0x/use-defer",
  "version": "1.2.8",
  "description": "A framework-agnostic hook for deferring operations using requestAnimationFrame",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "vue",
    "hook",
    "composable",
    "defer",
    "requestAnimationFrame",
    "performance",
    "framework-agnostic"
  ],
  "author": {
    "name": "Evander",
    "email": "wcj46259@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.5.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evander0x/use-defer.git"
  },
  "bugs": {
    "url": "https://github.com/evander0x/use-defer/issues"
  },
  "homepage": "https://github.com/evander0x/use-defer#readme"
}
